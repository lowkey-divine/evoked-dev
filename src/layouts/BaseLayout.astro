---
import ChatWidget from '../components/ai/ChatWidget.astro';

interface Props {
  title: string;
  description?: string;
  hideFloatingChat?: boolean;
  image?: string;
}

const { title, description = "Space for what matters.", hideFloatingChat = false, image = "/images/evoke-lips-yellow.png" } = Astro.props;
const showFloatingChat = !hideFloatingChat && Astro.url.pathname !== '/ask' && Astro.url.pathname !== '/ask/';
const canonicalURL = new URL(Astro.url.pathname, "https://evoked.dev");
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />
    <link rel="canonical" href={canonicalURL.href} />

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL.href} />
    <meta property="og:title" content={`${title} — evoked.dev`} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL(image, "https://evoked.dev").href} />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={`${title} — evoked.dev`} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={new URL(image, "https://evoked.dev").href} />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:ital,wght@0,400;0,500;1,400&family=Inter:wght@400;500&display=swap" rel="stylesheet" />

    <title>{title} — evoked.dev</title>
  </head>
  <body>
    <nav>
      <ul>
        <li><a href="/">home</a></li>
        <li><a href="/coaching">coaching</a></li>
        <li><a href="/consulting">consulting</a></li>
        <li><a href="/writing">writing</a></li>
        <li><a href="/projects">projects</a></li>
        <li><a href="/ask">ask</a></li>
        <li><a href="/about">about</a></li>
      </ul>
    </nav>

    <main>
      <slot />
    </main>

    <footer>
      <p>evoked.dev</p>
      <p class="mt-sm">I Evoke.</p>
      <div class="footer-lips">
        <img src="/images/evoke-lips-yellow.png" alt="Evoke" class="lips-footer" />
      </div>
    </footer>

    {showFloatingChat && <ChatWidget mode="floating" />}
  </body>
</html>

<style is:global>
  @import '../styles/global.css';
</style>
